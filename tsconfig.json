{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "prisma.config.ts",
    "prisma/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}